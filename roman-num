
//https://www.codewars.com/kata/roman-numerals-decoder/train/cpp
#include <iostream>
#include <string>

using namespace std;

int solution(string roman) {
 int rez = 0;
 for (auto char : roman){  
    switch (char){
      case "I": rez+=1; break;
      case "V": rez+=5; break;
      case "X": rez+=10; break;
      case "L": rez+=50; break;
      case "C": rez+=100; break;
      case "D": rez+=500; break;
      case "M": rez+=1000; break;
      default: rez+=0; break; // WTF?!
    }
  }
  return rez;
}
